%p#notice= notice
%h1= bookmark.title

%p
  %strong Bookmark short url:
  = link_to "#{bookmark.short_url}", bookmark.url

%p
  %strong Bookmark full url:
  = link_to "#{bookmark.url}", bookmark.url

%p
  %strong Tags:
  = bookmark.all_tags

%p.buttons
  = link_to 'Edit', edit_bookmark_path(bookmark), class: 'btn btn-warning'
  |
  \#{link_to 'Back', bookmarks_path, class: 'btn btn-info'}
