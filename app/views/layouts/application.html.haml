!!!
%html
  %head
    %title Bookmarks
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .col-md-12
      %nav.navbar.navbar-default
        %div.navbar-header
          %ul.nav.navbar-nav
            %li= link_to 'Bookmarks', root_path
          = form_tag search_index_path, method: :get, class: "navbar-form navbar-left" do
            = text_field_tag :search_term, params[:search_term], class: "form-control", required: true, placeholder: 'tag, website or bookmark'
            = submit_tag "Search", class: "btn btn-default"

      = yield
